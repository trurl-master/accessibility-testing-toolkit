{
  "name": "accessibility-testing-toolkit",
  "version": "1.1.0-beta.1",
  "author": "Ivan Galiatin",
  "license": "MIT",
  "description": "A toolkit for testing accessibility",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/trurl-master/accessibility-testing-toolkit.git"
  },
  "keywords": [
    "accessibility",
    "accessibility tree",
    "aria",
    "dom",
    "jest",
    "jsdom",
    "testing"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/index.js"
    },
    "./matchers": {
      "types": "./dist/matchers.d.ts",
      "import": "./dist/esm/matchers.js",
      "require": "./dist/matchers.js"
    }
  },
  "files": [
    "/dist",
    "/src",
    "!/src/**/__tests__/*",
    "!/src/**/*.test.tsx"
  ],
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "watch": "tsup --watch",
    "build": "tsup",
    "test": "jest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/ --ext .ts,.tsx",
    "prepare": "tsup"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "module": "dist/esm/index.js",
  "tsup": {
    "entry": [
      "src/index.ts",
      "src/matchers.ts"
    ],
    "splitting": false,
    "sourcemap": true,
    "dts": true,
    "format": [
      "cjs",
      "esm"
    ],
    "clean": true,
    "legacyOutput": true
  },
  "dependencies": {
    "aria-query": "^5.3.0",
    "dom-accessibility-api": "^0.6.3",
    "lodash.clonedeep": "^4.5.0",
    "lodash.isequal": "^4.5.0",
    "tslib": "^2.6.2"
  },
  "devDependencies": {
    "@testing-library/dom": "^9.3.3",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^14.1.0",
    "@testing-library/user-event": "^14.5.1",
    "@types/jest": "^29.5.8",
    "@types/lodash.clonedeep": "^4.5.9",
    "@types/lodash.isequal": "^4.5.8",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.11.0",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.0.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.1.0",
    "ts-jest": "^29.1.1",
    "tsup": "^7.2.0",
    "typescript": "^5.2.2"
  }
}
