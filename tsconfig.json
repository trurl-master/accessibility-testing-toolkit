{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "jsx": "react-jsx",
    "allowJs": true
  },
  "include": ["src", "./jest-setup.ts"], // which files to compile
  "exclude": ["node_modules"] // which files to skip
}
